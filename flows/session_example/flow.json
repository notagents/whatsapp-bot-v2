{
  "mode": "fsm",
  "initialState": "START",
  "states": {
    "START": {
      "reply": "¡Hola! Soy el bot de ejemplo. ¿En qué puedo ayudarte?",
      "transitions": [
        { "match": { "any": true }, "next": "ROUTER" }
      ]
    },
    "ROUTER": {
      "router": {
        "type": "keyword",
        "routes": [
          { "keyword": "precio", "next": "PRICING" },
          { "keyword": "soporte", "next": "SUPPORT" },
          { "default": true, "next": "GENERIC" }
        ]
      }
    },
    "PRICING": {
      "agent": "default_assistant",
      "kb": { "enabled": true, "topK": 4 },
      "transitions": [
        { "match": { "any": true }, "next": "END" }
      ]
    },
    "SUPPORT": {
      "agent": "default_assistant",
      "kb": { "enabled": false },
      "transitions": [
        { "match": { "any": true }, "next": "END" }
      ]
    },
    "GENERIC": {
      "agent": "default_assistant",
      "kb": { "enabled": true, "topK": 4 },
      "transitions": [
        { "match": { "any": true }, "next": "END" }
      ]
    },
    "END": {
      "end": true
    }
  }
}
